{% extends "Master/MicroTemplate.html.twig" %}

{% block body %}
<div class="container">
    <div class="card card-login mx-auto mt-5">
        <div class="card-header">
            <a href="index.php">
                <img src="Core/Assets/Images/horizontal-logo.png" alt="FacturaScripts" class="img-fluid"/>
            </a>
            <h1 class="text-center text-capitalize">{{ i18n.trans('login') }}</h1>
        </div>
        <div class="card-body">
            <form action="index.php" method="post" class="form">
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-user" aria-hidden="true"></i>
                        </span>
                        <input type="text" name="fsNick" class="form-control" maxlength="50" placeholder="{{ i18n.trans('user') }}" required="" autocomplete="off" autofocus=""/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-key" aria-hidden="true"></i>
                        </span>
                        <input type="password" name="fsPassword" class="form-control" maxlength="50" placeholder="{{ i18n.trans('password') }}" required="" autocomplete="off"/>
                    </div>
                </div>
                <button type="submit" class="btn btn-block btn-primary">
                    {{ i18n.trans('login') }}
                </button>
            </form>
        </div>
    </div>
</div>
<br/><br/><br/>
{% endblock %}
{{ debugBarRender.render()|raw }}
{% endblock %}
